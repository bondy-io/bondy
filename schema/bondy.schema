%% =============================================================================
%% VALIDATORS
%% =============================================================================


{validator,
  "non_neg_integer",
  "greater than 0",
  fun(Size) -> Size >= 0 end
}.

{validator,
  "pos_integer",
  "greater than 1",
  fun(Size) -> Size >= 1 end
}.


{validator,
  "port_number",
  "a number greater or equal to 0 and less or equal to 65535",
  fun(Port) -> (((Port) band bnot 16#ffff) =:= 0) end
}.


{validator,
  "ip_address",
  "A valid IPv4 or IPv6 address",
  fun(Term) ->
    case inet:getaddr(Term, inet) of
      {ok, _} ->
          true;
      {error, _} ->
        case inet:getaddr(Term, inet6) of
          {ok, _} ->
              true;
          {error, _} ->
              false
        end
    end
  end
}.