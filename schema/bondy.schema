%% @doc Defines a list of ip_address:port this node will use to listen for
%% incoming cluster connections. The value accepts the following input formats
%% - 192.168.50.174:18086
%% - [192.168.50.174:18086]
%% - 192.168.50.174:18086, 192.168.50.180:18086
%% - [192.168.50.174:18086, 192.168.50.180:18086]
%%
%% If this option is provided Partisan will ignore 'cluster.peer_port' but notice that the value for peer port is still required for some discovery strategies used by partisan_peer_discovery_agent e.g. dns discovery which
{mapping, "cluster.listen_addresses",
"partisan.listen_addrs", [
  {datatype, string}
]}.


{translation,

  "partisan.listen_addrs",
  fun(Conf0) ->
      Conf = cuttlefish_variable:filter_by_prefix(
        "cluster.listen_addresses", Conf0
      ),

      Parse = fun(Val, ForceList) ->
         case string:split(Val, ",") of
            [Val] when ForceList == true ->
              [list_to_binary(Val)];
            [Val] when ForceList == false ->
              list_to_binary(Val);
            L when is_list(L) ->
              [list_to_binary(E) || E <- L]
          end
      end,

      lists:foldl(
          fun
            ({["cluster", "listen_addresses"], Value0}, Acc) ->
              %% Remove empty spaces
              Value1 = unicode:characters_to_list(
                string:replace(Value0, " ", "", all)
              ),
              %% parse list
              case string:trim(Value1, both, "[]") of
                Value1 ->
                  %% No list, but maybe list without [ ]
                  [Parse(Value1, false) | Acc];
                Trimmed ->
                  %% A list
                  [Parse(Trimmed, true) | Acc]
              end;

            ({["cluster", "listen_addresses"], Value}, Acc) ->
              [list_to_binary(Value) | Acc]

          end,
          [],
          Conf
      )
  end
}.

