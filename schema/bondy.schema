  "partisan.peer_discovery.type", [
  {datatype, atom}
]}.

{translation,
"partisan.peer_discovery.type",
fun(Conf0) ->
    Value = cuttlefish:conf_get(
      "cluster.peer_discovery.type", Conf0, undefined
    ),
    case Value of
      undefined ->
        cuttlefish:unset();
      dns ->
        partisan_peer_discovery_dns;
      list ->
        partisan_peer_discovery_list;
      Other ->
        Other
    end
end}.

%% The configuration for the selected strategy.
%% Example:
%% cluster.peer_discovery.config.keyA = valueA
%% cluster.peer_discovery.config.keyB = valueB
%%
%% Example: Using arrays
%% cluster.peer_discovery.config.keyA._ = value1
%% cluster.peer_discovery.config.keyA._ = value2
%%
%% Refer to each strategy documentation
{mapping,
  "cluster.peer_discovery.config.$name",
  "partisan.peer_discovery.config", [
  {datatype, string}
]}.


{mapping,
  "cluster.peer_discovery.config.$name.$item",
  "partisan.peer_discovery.config", [
  {datatype, string}
]}.


{translation,
  "partisan.peer_discovery.config",
  fun(Conf0) ->
      Conf = cuttlefish_variable:filter_by_prefix(
        "cluster.peer_discovery.config", Conf0
      ),

      Split = fun(Val, ForceList) ->
         case string:split(Val, ",") of
            [Val] when ForceList == true ->
              [list_to_binary(Val)];
            [Val] when ForceList == false ->
              list_to_binary(Val);
            L when is_list(L) ->
              [list_to_binary(E) || E <- L]
          end
      end,

      Dict = lists:foldl(
          fun
            ({["cluster", "peer_discovery", "config", Key], Value0}, Acc) ->
              Value1 = unicode:characters_to_list(
                string:replace(Value0, " ", "", all)
              ),
              Value =
                case string:trim(Value1, both, "[]") of
                  Value1 ->
                    %% No list, but maybe list without [ ]
                    Split(Value1, false);
                  Trimmed ->
                    %% A list
                    Split(Trimmed, true)
                end,
              dict:store(list_to_atom(Key), Value, Acc);

            ({["cluster", "peer_discovery", "config", Key, _], Value}, Acc) ->
              %% TODO check if we can use list_to_existing_atom here
              %% we might need to create atoms first
              dict:append(list_to_atom(Key), list_to_binary(Value), Acc)
          end,
          dict:new(),
          Conf
      ),
      dict:fold(
        fun
          (K, V, Acc) when is_list(V) ->
            maps:put(K, lists:reverse(V), Acc);
          (K, V, Acc) ->
            maps:put(K, V, Acc)
        end,
        #{},
        Dict
      )
  end
}.


