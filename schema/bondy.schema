{mapping, "serializers.json.float_format",
  "bondy.json.float_format", [
  {datatype, string},
  {default, "[{decimals, 16}]"}
]}.


{translation, "bondy.json.float_format",
  fun(Conf) ->

    case cuttlefish:conf_get("serializers.json.float_format", Conf) of
      undefined ->
        [];

      String when is_list(String) ->
        case erl_scan:string(String ++ ".") of
          {ok, Tokens, _} ->
            {ok, Term} = erl_parse:parse_term(Tokens),
            Term;

          {error, _} ->
            cuttlefish:invalid(
              "value should be a list of options "
              "according to erlang:float_to_binary/2"
            )
        end;

        _ ->
          cuttlefish:invalid(
            "value should be a list of options "
            "according to erlang:float_to_binary/2"
          )
    end
  end}.


%% =============================================================================
%% ROUTER
%% =============================================================================


{mapping, "router.forward.ack",
  "bondy.router.forward.ack",
  [
    {default, off},
    {datatype, flag}
  ]
}.

{mapping, "router.forward.retransmission",
  "bondy.router.forward.retransmission",
  [
    {default, off},
    {datatype, flag}
  ]
}.


{translation, "bondy.router.forward",
  fun(Conf0) ->
    Conf = cuttlefish_variable:filter_by_prefix("router.forward", Conf0),
    Fwd =
      lists:foldl(
        fun
          ({["router", "forward", "ack"], V}, Acc) ->
            maps:put(ack, V, Acc);
          ({["router", "forward", "retransmission"], V}, Acc) ->
            maps:put(retransmission, V, Acc)
        end,
        #{},
        Conf
      ),
    Fwd
 end
}.

